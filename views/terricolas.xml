<odoo>
  <data>
    <!-- Arbol -->
    <record model="ir.ui.view" id="dragon_ball_z.list_terricolas">
      <field name="name">dragon_ball_z.terricolas.tree</field>
      <field name="model">dragon_ball_z.terricolas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="edad"/>
          <field name="fecha_nac"/>
        </tree>
      </field>
    </record>
     <!-- Formulario -->
    <record model="ir.ui.view" id="dragon_ball_z.form_terricolas">
      <field name="name">dragon_ball_z form</field>
      <field name="model">dragon_ball_z.terricolas</field>
      <field name="arch" type="xml">
        <group>
          <field name="nombre"/>
          <field name="descripcion"/>
          <field name="edad"/>
          <field name="fecha_nac"/>
        </group>
      </field>
    </record>
    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="dragon_ball_z.action_window_terricolas">
      <field name="name">dragon_ball_z window</field>
      <field name="res_model">dragon_ball_z.terricolas</field>
      <field name="view_mode">tree,form</field>
    </record>
    

